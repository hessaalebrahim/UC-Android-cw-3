<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7090909"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewtitle"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="138dp"
        android:layout_marginTop="43dp"
        android:text="HELLO!!"
        android:textColor="#E3A2B8"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewtitle"
        android:layout_alignParentStart="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="187dp"
        android:text="Please enter your info:"
        android:textColor="#F6F2F2"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/editTextname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewinfo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:hint="Your name"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="@color/white"
        android:textSize="25dp"/>

    <EditText
        android:id="@+id/editTextage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextname"
        android:layout_alignParentStart="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="38dp"
        android:ems="10"
        android:hint="your age"
        android:inputType="textPersonName"
        android:textColor="#F8F5F5"
        android:textColorHint="#FDFAFA"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/button"
        android:layout_width="122dp"
        android:layout_height="70dp"
        android:layout_below="@+id/editTextage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="144dp"
        android:layout_marginTop="27dp"
        android:backgroundTint="#E3A2B8"
        android:text="Next" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="210dp"
        android:layout_height="232dp"
        android:layout_below="@+id/textViewtitle"
        android:layout_alignParentStart="true"
        android:layout_marginStart="101dp"
        android:layout_marginTop="-55dp"
        app:srcCompat="@drawable/hello" />
</RelativeLayout>